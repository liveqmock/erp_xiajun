<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wangqin.globalshop.biz1.app.dal.mapperExt.ChannelShopDOMapperExt" >

    <sql id="tableSection">channel_shop</sql>

    <resultMap id="BaseResultMapExt" type="com.wangqin.globalshop.biz1.app.dal.dataObject.ChannelShopDO" extends="com.wangqin.globalshop.biz1.app.dal.mapper.ChannelShopDOMapper.BaseResultMap">
    </resultMap>






    <sql id="commonSelectSection">
        1 = 1
        <if test="channelNo != null">
            and T.channel_no = #{channelNo}
        </if>

        <if test="companyNo != null">
            and T.company_no = #{companyNo}
        </if>

        <if test="shopCode != null">
            and T.shop_code = #{shopCode}
        </if>

        <if test="expiresTime != null">
            and T.expires_time >= #{expiresTime}
        </if>

        <if test=" isDel == true">
            and T.is_del is true
        </if>
        <if test=" isDel == false">
            and T.is_del is false
        </if>
        <if test=" isDel == null">
            and T.is_del is false
        </if>

    </sql>


    <!--查询总条数 -->
    <select id="searchShop" resultMap="BaseResultMapExt"
    >
        SELECT <include refid="com.wangqin.globalshop.biz1.app.dal.mapper.ChannelShopDOMapper.Base_Column_List" />
        FROM <include refid="tableSection"/> T
        WHERE
        <include refid="commonSelectSection"/>
    </select>

    <!--查询总条数 -->
    <select id="searchShopCount" resultType="java.lang.Long"
    >
        SELECT COUNT(*)
        FROM <include refid="tableSection"/> T
        WHERE
        <include refid="commonSelectSection"/>
    </select>

    <!-- -->
    <select id="searchShopList" resultMap="BaseResultMapExt">
        SELECT  <include refid="com.wangqin.globalshop.biz1.app.dal.mapper.ChannelShopDOMapper.Base_Column_List" />
        FROM <include refid="tableSection"/> T
        WHERE
        <include refid="commonSelectSection"/>
        ORDER BY T.id desc
    </select>

</mapper>
