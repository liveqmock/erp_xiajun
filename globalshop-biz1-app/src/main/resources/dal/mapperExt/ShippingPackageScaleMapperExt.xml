<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangqin.mapper.PackageScaleMapper">

	<!-- 通用查询结果列-->
    <sql id="Base_Column_List">
		 id,name,en_name AS enName
	</sql>

	<select id="queryPackageScalesCount" resultType="java.lang.Integer">
        SELECT
        	count(1)
        FROM
            `package_scale` T1
        where
     		   1=1
            <if test=" name != null and name != '' ">
                and T1.name = #{name}
            </if>
            <if test=" enName != null and enName != '' ">
            	and T1.en_name = #{enName}
            </if>
            
    </select>
    
    <select id="queryPackageScales" resultType="com.wangqin.model.PackageScale" >
        SELECT
        	 <include refid="Base_Column_List" />
        FROM
            `package_scale` T1
        where
             1=1
        order by T1.id
    </select>

</mapper>