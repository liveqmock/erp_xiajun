<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangqin.globalshop.biz1.app.dal.mapperExt.ItemScaleMapperExt">

	<!-- 通用查询结果列-->
    <sql id="Base_Column_List">
		 id,name,type_id AS typeId,seq
	</sql>

   
    
    <select id="queryScalesByTypeId" resultType="com.wangqin.globalshop.biz1.app.dal.dataObject.ScaleDO" >
        SELECT
        	 <include refid="Base_Column_List" />
        FROM
            `scale`
        where
            type_id=#{typeId}
    </select>

</mapper>