<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangqin.globalshop.biz1.app.dal.mapperExt.ItemCategoryDOMapperExt">

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
        id, name, pid, level, seq,status,gmt_create as gmtCreate ,gmt_modify as gmtModify,all_path as allPath
    </sql>
	
	<select id="selectByName" resultType="com.wangqin.globalshop.biz1.app.dal.dataObject.ItemCategoryDO" parameterType="java.lang.String">
		SELECT 
		<include refid="Base_Column_List" />
		FROM category 
		WHERE name = #{name}
	</select>
	
	<select id="queryByCategoryCode"> 
	SELECT 
	<include refid="Base_Column_List" />
	from item_category
	<where>
	category_code=#{categoryCode}
	AND is_del=0
	</where>
	</select>
	
	<select id="queryAll"> 
	SELECT 
	<include refid="Base_Column_List" />
	from item_category
	<where>
      is_del=0
	</where>
	</select>
</mapper>