<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangqin.mapper.CategoryMapper">

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
        id, name, pid, level, seq,status,gmt_create as gmtCreate ,gmt_modify as gmtModify,all_path as allPath
    </sql>
	
	<select id="selectByName" resultType="com.wangqin.model.Category" parameterType="java.lang.String">
		SELECT 
		<include refid="Base_Column_List" />
		FROM category 
		WHERE name = #{name}
	</select>
</mapper>