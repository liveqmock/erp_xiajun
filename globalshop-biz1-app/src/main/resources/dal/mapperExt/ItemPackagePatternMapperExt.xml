<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangqin.globalshop.biz1.app.dal.mapperExt.ItemPackagePatternMapperExt">
	
	<sql id="Base_Column_List">
		id,name
	</sql>
	
	<sql id="Base_Column_List_Old">
		id,name AS name,name_en AS packageEn,packaging_scale_no AS packagingScaleNo,
		package_level AS packageLevel,weight AS weight
	</sql>
	
	<select id="queryPackageLevelsCount" resultType="java.lang.Integer"  parameterType="com.wangqin.globalshop.biz1.app.vo.PackageLevelQueryVO">
        SELECT
        	count(1)
        FROM
            `shipping_packing_pattern` T1
        where
     		   T1.is_del=0
            <if test=" name != null and name != '' ">
                and T1.name = #{name}
            </if>
            <if test=" packageEn != null and packageEn != '' ">
            	and T1.name_en = #{packageEn}
            </if>
            <!--  
            <if test=" packageLevel != null ">
            	and T1.package_level = #{packageLevel}
            </if>
            <if test=" packageId != null ">
            	and T1.package_id = #{packageId}
            </if>
            -->
            
    </select>
    
    <select id="queryPackageLevels" resultType="com.wangqin.globalshop.biz1.app.dto.ItemPackagePatternDTO" parameterType="com.wangqin.globalshop.biz1.app.vo.PackageLevelQueryVO">
        SELECT
        	 <include refid="Base_Column_List_Old" />
        FROM
            `shipping_packing_pattern` T1
        where
             is_del=0
            <if test=" id != null and id != '' ">
                and T1.id = #{id}
            </if>
            <if test=" name != null and name != '' ">
                and T1.name = #{name}
            </if>
            <if test=" packageEn != null and packageEn != '' ">
            	and T1.package_en = #{packageEn}
            </if>
            <!--  
            <if test=" packageLevel != null ">
            	and T1.package_level = #{packageLevel}
            </if>
            <if test=" packageId != null ">
            	and T1.package_id = #{packageId}
            </if>
            -->
          order by T1.id 
          	<![CDATA[ LIMIT #{firstStart},#{pageSize} ]]>
    </select>
    
    
    <select id="queryPatternsByScaleNo" resultType="com.wangqin.globalshop.biz1.app.dto.ItemPackagePatternDTO"  >
        SELECT
        	 <include refid="Base_Column_List" />
        FROM
            `shipping_packing_pattern` T1
        where
     		  
            T1.packaging_scale_no=#{no}
            
    </select>
    
    <insert id="insertPattern" parameterType="com.wangqin.globalshop.biz1.app.dal.dataObject.ShippingPackingPatternDO" >
    insert into shipping_packing_pattern
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="patternNo != null" >
        pattern_no,
      </if>
      <if test="packagingScaleNo != null" >
        packaging_scale_no,
      </if>
      <if test="name != null" >
        name,
      </if>
      <if test="nameEn != null" >
        name_en,
      </if>
     
      <if test="packageLevel != null" >
        package_level,
      </if>
       <if test="weight != null" >
        weight,
      </if>
      <if test="creator != null" >
        creator,
      </if>
      <if test="modifier != null" >
        modifier,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="patternNo != null" >
        #{patternNo,jdbcType=VARCHAR},
      </if>
      <if test="packagingScaleNo != null" >
        #{packagingScaleNo,jdbcType=VARCHAR},
      </if>
      <if test="name != null" >
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="nameEn != null" >
        #{nameEn,jdbcType=VARCHAR},
      </if>
       <if test="packageLevel != null" >
        #{packageLevel},
      </if>
       <if test="weight != null" >
        #{weight},
      </if>
      <if test="creator != null" >
        #{creator,jdbcType=VARCHAR},
      </if>
      <if test="modifier != null" >
        #{modifier,jdbcType=VARCHAR},
      </if>
      
     
    </trim>
  </insert>
  
  <update id="deleteById" parameterType="java.lang.Long">
  	update shipping_packing_pattern
  	set is_del=1
  	where id=#{id}
  </update>
 
 
 <!-- 按条件修改pattern(fin) -->
    <update id="updateLevelSelectiveById" parameterType="com.wangqin.globalshop.biz1.app.dto.ItemPackagePatternDTO">
       UPDATE `shipping_packing_pattern` T1
       SET
       <trim suffixOverrides="," >
            <if test=" name != null and name != '' ">
                T1.name=#{name},
            </if>        
            <if test=" packageEn != null and packageEn  != ''">
              T1.name_en = #{packageEn},
            </if>
            <if test=" packagingScaleNo!= null ">
                T1.packaging_scale_no = #{packagingScaleNo},
            </if>
            <if test=" creator!= null ">
           		T1.creator = #{creator},
            </if>
            <if test=" modifier!= null ">
           		T1.modifier = #{modifier},
            </if>
            <if test=" weight!= null ">
           		T1.weight = #{weight},
            </if>
            <if test=" packageLevel!= null ">
           		T1.package_level = #{packageLevel},
            </if>
         </trim>
           where id=#{id}
    </update>
    
    
    
</mapper>