  <sql id="tableSection">auth_role</sql>

  <sql id="commonSelectSection">
    1 = 1

    <if test="companyNo != null">
      and T.company_no = #{companyNo}
    </if>

    <if test="name != null">
      and T.name = #{name}
    </if>

    <if test=" isDel == true">
      and T.is_del is true
    </if>
    <if test=" isDel == false">
      and T.is_del is false
    </if>
    <if test=" isDel == null">
      and T.is_del is false
    </if>

  </sql>


