<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wangqin.globalshop.biz1.app.dal.mapperExt.AppletConfigDOMapperExt" >
  
  <!-- 一键分享：查询公司对应的商城小程序的appid和screat -->
  <select id="queryWxMallConfigInfoByCompanyNo" resultType="com.wangqin.globalshop.biz1.app.dal.dataObject.AppletConfigDO"
    parameterType="java.lang.String">
    SELECT 
    <include refid="com.wangqin.globalshop.biz1.app.dal.mapper.AppletConfigDOMapper.Base_Column_List"/>
    FROM 
    applet_config
    <where>
    company_no=#{companyNo}
    AND applet_type=#{appletType}
    AND is_del=0
    </where>
    LIMIT 0,1
  </select>

  <select id="selectByCompanyNoAndType" resultType="com.wangqin.globalshop.biz1.app.dal.dataObject.AppletConfigDO" parameterType="java.lang.String">
    select
    <include refid="com.wangqin.globalshop.biz1.app.dal.mapper.AppletConfigDOMapper.Base_Column_List"/>
    from applet_config
    where company_no = #{companyNo,jdbcType=VARCHAR}
    AND applet_type =#{type,jdbcType=VARCHAR}
  </select>
  <select id="list" resultType="com.wangqin.globalshop.biz1.app.dal.dataObject.AppletConfigDO">
    select
    <include refid="com.wangqin.globalshop.biz1.app.dal.mapper.AppletConfigDOMapper.Base_Column_List"/>
    from applet_config
  </select>

</mapper>
