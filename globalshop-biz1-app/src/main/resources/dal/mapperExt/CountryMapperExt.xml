<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangqin.mapper.CountryMapper">
<!-- @Author:Xiajun -->

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
        id, name, gmt_create as gmtCreate ,user_create as userCreate
    </sql>
    
    <!-- 根据名字查找国家，防止添加已存在的国家-->
    <select id="selectCountryByName" resultType="com.wangqin.model.Country" parameterType="java.lang.String">
		SELECT 
		<include refid="Base_Column_List" />
		FROM country T1 
		WHERE name = #{name}
	</select>
	
	<!--查询所有国家 -->
	<select id="queryAllCountries" resultType="com.wangqin.model.Country" >
		SELECT 
		id,name
		FROM country
	</select>
	
	
</mapper>