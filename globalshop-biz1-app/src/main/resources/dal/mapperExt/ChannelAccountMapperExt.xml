<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangqin.mapper.ChannelAccountMapper">

	<resultMap id="ChannelAccountMap"
		type="com.wangqin.model.ChannelAccount">
		<result property="id" column="id" />
		<result property="type" column="type" />
		<result property="name" column="name" />
		<result property="status" column="status" />
		<result property="companyId" column="company_id" />
		<result property="appKey" column="app_key" />
		<result property="appSecret" column="app_secret" />
		<result property="accessToken" column="access_token" />
		<result property="appValue1" column="app_value1" />
		<result property="appValue2" column="app_value2" />
		<result property="appValue3" column="app_value3" />
		<result property="gmtCreate" column="gmt_create" />
		<result property="gmtModified" column="gmt_modified" />
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		T1.id,
		T1.type,
		T1.name,
		T1.status,
		T1.company_id,
		T1.app_key,
		T1.app_secret,
		T1.access_token,
		T1.app_value1,
		T1.app_value2,
		T1.app_value3,
		T1.gmt_create,
		T1.gmt_modified
	</sql>

	<!--查询总条数 -->
	<select id="queryChannelAccountCount" resultType="java.lang.Integer" parameterType="com.wangqin.vo.ChannelAccountVO">
		SELECT COUNT(*) 
		FROM channel_account T1 
		WHERE 1=1 
		<if test=" name != null and name != '' ">
			and T1.name LIKE concat('%',#{name},'%')
        </if>
        <if test=" type != null ">
			and T1.type = #{type}
        </if>
        <if test=" status != null ">
			and T1.status = #{status}
        </if>
        <if test=" companyId != null ">
			and T1.company_id = #{companyId}
        </if>
	</select>

	<!--分页查询 -->
	<select id="queryChannelAccountList" resultMap="ChannelAccountMap" parameterType="com.wangqin.vo.ChannelAccountVO">
		SELECT <include refid="Base_Column_List" /> 
		FROM channel_account T1 
		WHERE 1=1 
		<if test=" name != null and name != '' ">
			and T1.name LIKE concat('%',#{name},'%')
        </if>
         <if test=" type != null ">
			and T1.type = #{type}
        </if>
        <if test=" status != null ">
			and T1.status = #{status}
        </if>
        <if test=" companyId != null ">
			and T1.company_id = #{companyId}
        </if>
        ORDER BY T1.id desc
	</select>
</mapper>