  </resultMap>
  <!-- 2.0 -->
  <sql id="Base_Column_List" >
    id, company_no, item_code, sku_code, inventory_on_warehouse_no, warehouse_no, shelf_no, 
    quantity, operator_type, gmt_create, gmt_modify, is_del, creator, modifier
  </sql>
  
   <select id="queryInventoryInoutCount" resultType="java.lang.Integer"  parameterType="com.wangqin.globalshop.biz1.app.dal.dataVo.InventoryQueryVO">
        SELECT
        		count(1)
        FROM
            inventory_inout T1,item_sku T2
        WHERE  is_del=0 
        		and T1.sku_code=T2.sku_code
       		<if test="itemName!=null and itemName!=''">
       			and T2.item_name LIKE concat('%',#{itemName},'%')
       		</if>
       		<if test="skuCode!=null and skuCode!=''">
       			and T1.sku_code = #{skuCode} 
       		</if>
       		<if test="upc!=null and upc!=''">
       			and T2.upc = #{upc} 
       		</if>
       		<if test="warehouseId != null">
        			and T1.warehouse_no = #{warehouseNO}	
        	</if>
       		<if test="operatorType != null">
        			and T1.operator_type = #{operatorType}	
        	</if>
        	<if test="positionNo != null">
        			and T1.shelf_no = #{positionNo}	
        	</if>
    </select>
    
    <select id="queryInventoryInouts" resultMap="BaseResultMap" parameterType="com.wangqin.globalshop.biz1.app.vo.InventoryQueryVO">
		SELECT
			<include refid="Base_Column_List"/>
        FROM
            inventory_inout
		<where>
			<if test="warehouseNo!=null and warehouseNo!=''">
				and warehouse_no = #{warehouseNo}
			</if>
			<if test="companyNo!=null and companyNo!=''">
				and company_no = #{companyNo}
			</if>
			<if test="skuCode!=null and skuCode!=''">
				and sku_code = #{skuCode}
			</if>
			<if test="itemName!=null and itemName!=''">
				and item_name = #{itemName}
			</if>
			<if test="positionNo!=null and positionNo!=''">
				and shelf_no = #{positionNo}
			</if>
		</where>

    </select>
    
    <!-- 查询出库商品详情 -->
    <select id="queryInventoryInoutsVo"  resultMap="BaseResultMapVO">
    	SELECT
			<include refid="Base_Column_List"/>,inventory_on_warehouse_no
        FROM
            inventory_inout
		<where>
			<if test="warehouseNo!=null and warehouseNo!=''">
				and warehouse_no = #{warehouseNo}
			</if>
			<if test="companyNo!=null and companyNo!=''">
				and company_no = #{companyNo}
			</if>
			<if test="skuCode!=null and skuCode!=''">
				and sku_code = #{skuCode}
			</if>
			<if test="itemName!=null and itemName!=''">
				and item_name = #{itemName}
			</if>
			<if test="positionNo!=null and positionNo!=''">
				and shelf_no = #{positionNo}
			</if>
		</where>
    </select>
    
    <!-- 查询 入库商品数,XiaJun-->
    <select id="countTodayInInventoryItemNum" resultType="java.lang.Integer">
    SELECT
    	IFNULL(sum(IFNULL(T1.quantity,0)),0)
    	FROM inventory_inout T1
    	<where> 
    	 1=1
    	 AND T1.operator_type IN
    	<foreach item="type" index="index" collection="typeList" open="(" separator="," close=")">  
			#{type}
		</foreach>

			<if test="today != null">
		AND
			<![CDATA[ T1.gmt_create >= #{today} ]]>
		</if>
		</where>
    </select>
    <!-- 通过skucode 查出商品的名称 upc sku图片 -->
    <select id="selectItemBySkuCode" parameterType="java.lang.String" resultType="com.wangqin.globalshop.biz1.app.dal.dataObject.ItemSkuDO">
    	SELECT
    		item_name itemName,
    		upc,
    		sku_pic skuPic,
    		creator
    	FROM
    		item_sku
    	WHERE
    		sku_code = #{skuCode}
    		AND
    		is_del = 0
    		
    </select>
</mapper>