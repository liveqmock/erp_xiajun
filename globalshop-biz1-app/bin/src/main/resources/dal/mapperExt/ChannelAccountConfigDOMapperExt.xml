<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wangqin.globalshop.biz1.app.dal.mapperExt.ChannelAccountConfigDOMapperExt" >

    <sql id="tableSection">channel_account</sql>

    <sql id="commonSelectSection">
        1 = 1
        <if test="@com.wangqin.globalshop.common.utils.StringUtils@isNotBlank(companyNo)">
            and T.company_no = #{companyNo}
        </if>

        <if test="@com.wangqin.globalshop.common.utils.StringUtils@isNotBlank(shopcode)">
            and T.shopCode = #{shopcode}
        </if>
        <if test="@com.wangqin.globalshop.common.utils.StringUtils@isNotBlank(itemkey)">
            and T.itemKey = #{itemkey}
        </if>


    </sql>


    <!--查询总条数 -->
    <select id="queryPo" resultMap="com.wangqin.globalshop.biz1.app.dal.mapper.ChannelAccountConfigDOMapper.BaseResultMap" parameterType="com.wangqin.globalshop.biz1.app.dal.dataSo.ChannelAccountSo">
        SELECT <include refid="com.wangqin.globalshop.biz1.app.dal.mapper.ChannelAccountConfigDOMapper.Base_Column_List" />
        FROM channel_account_config T
        WHERE
        <include refid="commonSelectSection"/>
    </select>



</mapper>
